@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Username" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Name" />
                <label asp-for="Input.Name" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Surname" class="form-control" placeholder="Please edit your surname." />
                <label asp-for="Input.Surname" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <select asp-for="Input.CourseYear" id="courseYear" class="form-control" placeholder="Please edit your academic year .">
                    @foreach (var value in Enum.GetValues(typeof(CourseYear)))
                    {
                        <option value="@value">@value.ToString()</option>
                    }
                </select>
                <label asp-for="Input.CourseYear" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <select asp-for="Input.CourseName" id="courseName" class="form-control" placeholder="Please edit your course name.">
                    @foreach (var value in Enum.GetValues(typeof(CourseName)))
                    {
                        <option value="@value">@value.ToString()</option>
                    }
                </select>
                <label asp-for="Input.CourseName" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <select asp-for="Input.TopicToLearn" id="topicToLearn" class="form-control" placeholder="Please edit the topic you want to learn.">
                    @foreach (var value in Model.TopicList)
                    {
                        <option value="@value.Id">@value.Title</option>
                    }
                </select>
                <label asp-for="Input.TopicToLearn" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <select asp-for="Input.TopicToTeach" id="topicToTeach" class="form-control" placeholder="Please edit the topic you want to teach.">
                    @foreach (var value in Model.TopicList)
                    {
                        <option value="@value.Id">@value.Title</option>
                    }
                </select>
                <label asp-for="Input.TopicToTeach" class="form-label"></label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}